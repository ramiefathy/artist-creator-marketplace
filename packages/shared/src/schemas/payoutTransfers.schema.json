{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mcmp.local/schemas/payoutTransfers.schema.json",
  "title": "payoutTransfers/{id}",
  "type": "object",
  "additionalProperties": false,
  "required": ["id","contractId","artistUid","creatorUid","stripeTransferId","amountCents","currency","status","createdAt"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "contractId": { "type": "string", "minLength": 1 },
    "artistUid": { "type": "string", "minLength": 1 },
    "creatorUid": { "type": "string", "minLength": 1 },
    "stripeTransferId": { "type": "string", "minLength": 1 },
    "amountCents": { "type": "integer", "minimum": 0 },
    "currency": { "type": "string", "const": "USD" },
    "status": { "type": "string", "enum": ["sent","failed"] },
    "createdAt": { "$ref": "timestamp.schema.json" }
  }
}
