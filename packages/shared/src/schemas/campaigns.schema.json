{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mcmp.local/schemas/campaigns.schema.json",
  "title": "campaigns/{campaignId}",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "campaignId","ownerUid","trackId","title","brief","platforms","deliverableSpec",
    "contentGuidelines","pricing","status","acceptedDeliverablesCount","createdAt","updatedAt"
  ],
  "properties": {
    "campaignId": { "type": "string", "minLength": 1 },
    "ownerUid": { "type": "string", "minLength": 1 },
    "trackId": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 5, "maxLength": 120 },
    "brief": { "type": "string", "minLength": 50, "maxLength": 4000 },
    "platforms": {
      "type": "array",
      "minItems": 1,
      "maxItems": 3,
      "uniqueItems": true,
      "items": { "type": "string", "enum": ["tiktok","instagram","youtube"] }
    },
    "deliverableSpec": {
      "type": "object",
      "additionalProperties": false,
      "required": ["deliverablesTotal","deliverableType","postMustRemainLiveDays","dueDaysAfterActivation"],
      "properties": {
        "deliverablesTotal": { "type": "integer", "minimum": 1, "maximum": 50 },
        "deliverableType": { "type": "string", "enum": ["tiktok_post","ig_reel","yt_short"] },
        "postMustRemainLiveDays": { "type": "integer", "const": 30 },
        "dueDaysAfterActivation": { "type": "integer", "minimum": 1, "maximum": 30 }
      }
    },
    "contentGuidelines": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mustIncludeDisclosure","disclosureTextExample","hashtags","callToAction","doNotInclude"],
      "properties": {
        "mustIncludeDisclosure": { "type": "boolean", "const": true },
        "disclosureTextExample": { "type": "string", "minLength": 1, "maxLength": 200 },
        "hashtags": {
          "type": "array",
          "maxItems": 10,
          "items": { "type": "string", "minLength": 1, "maxLength": 64 }
        },
        "callToAction": { "type": ["string","null"], "maxLength": 200 },
        "doNotInclude": { "type": ["string","null"], "maxLength": 500 }
      }
    },
    "pricing": {
      "type": "object",
      "additionalProperties": false,
      "required": ["currency","maxPricePerDeliverableCents"],
      "properties": {
        "currency": { "type": "string", "const": "USD" },
        "maxPricePerDeliverableCents": { "type": "integer", "minimum": 500, "maximum": 500000 }
      }
    },
    "status": { "type": "string", "enum": ["draft","live","paused","completed","archived"] },
    "acceptedDeliverablesCount": { "type": "integer", "minimum": 0, "maximum": 50 },
    "createdAt": { "$ref": "timestamp.schema.json" },
    "updatedAt": { "$ref": "timestamp.schema.json" }
  }
}
