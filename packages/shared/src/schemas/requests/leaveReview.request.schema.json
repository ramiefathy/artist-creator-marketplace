{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mcmp.local/schemas/requests/leaveReview.request.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "contractId",
    "rating",
    "text"
  ],
  "properties": {
    "contractId": {
      "type": "string",
      "minLength": 1
    },
    "rating": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5
    },
    "text": {
      "type": [
        "string",
        "null"
      ],
      "maxLength": 1000
    }
  }
}
